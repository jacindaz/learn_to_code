%h3= @resource.title
%hr

%h5= "#{@resource.language.camelcase}, #{@resource.tech ? @resource.tech.camelcase + "," : nil} #{@resource.free ? "Free" : "Not free"}"

%p= @resource.description
%p= link_to @resource.url, @resource.url, target: '_blank'

%div{ style: "margin-top: 30px;" }
  - @resource.tag_list.each do |tag|
    %button.btn.btn-info{style: "font-size: 12px; font-color: white;"}
      = link_to tag, "www.google.com", class: "resource_tag_button"
