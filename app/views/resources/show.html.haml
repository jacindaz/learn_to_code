%h3= @resource.title
%hr

%h5= "#{@resource.language.camelcase}, #{@resource.tech ? @resource.tech.camelcase + "," : nil} #{@resource.free ? "Free" : "Not free"}"

%p= @resource.description
%p= link_to @resource.url, @resource.url, target: '_blank'

= render partial: "tags", locals: { tags: @resource.tag_list, resource: @resource }

.ui-widget{ style: "margin-top: 20px;" }
  %label Tags
  %input.tags-autocomplete

:javascript
  $(".tags-autocomplete").autocomplete({
    source: 'tags_autocomplete'
  });
